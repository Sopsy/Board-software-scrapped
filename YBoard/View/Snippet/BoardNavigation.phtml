<div class="board-navigation">
    <div class="breadcrumb">
        <a href="/"><?= htmlspecialchars($config['app']['name']) ?></a>
        <div class="sep">&raquo;</div>
        <a href="/<?= $board->url ?>/"><?= htmlspecialchars($board->name) ?></a>
        <?php if(!empty($thread->id)): ?>
            <div class="sep">&raquo;</div>
            <a href="/<?= $board->url ?>/<?= $thread->id ?>"><?= htmlspecialchars($thread->subject) ?></a>
        <?php endif ?>
    </div>
    <?php if (empty($thread->id)): ?>
    <div class="pagination">
        <?php if ($pagination['page'] == 2): ?>
            <a href="/<?= $board->url . ($pagination['catalog'] ? '/catalog' : '/') ?>" class="icon icon-chevron-left chevron"></a>
        <?php elseif ($pagination['page'] > 2): ?>
            <a href="/<?= $board->url . ($pagination['catalog'] ? '/catalog' : '')?>-<?=
                $pagination['page']-1 . ($pagination['catalog'] ? '' : '/') ?>" class="icon icon-chevron-left chevron"></a>
        <?php endif ?>
