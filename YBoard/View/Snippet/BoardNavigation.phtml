            <a href="/<?= $board->url . ($pagination['catalog'] ? '/catalog' : '/') ?>"<?= ($pagination['page']==1?' class="cur"':'') ?>>1</a>
            <?php if ($pagination['startPage'] > 2): ?>
            <span class="sep">&hellip;</span>
            <?php endif ?>
        <?php endif ?>

        <?php for ($i = $pagination['startPage']; $i <= $pagination['endPage']; ++$i): ?>
            <a href="/<?= $board->url . ($pagination['catalog'] ? '/catalog' : '')?>-<?=
                $i . ($pagination['catalog'] ? '' : '/') ?>"<?= ($pagination['page']==$i?' class="cur"':'') ?>><?= $i ?></a>
        <?php endfor ?>
        <?php if ($pagination['page'] < $pagination['maxPages']): ?>
            <a href="/<?= $board->url . ($pagination['catalog'] ? '/catalog' : '')?>-<?=
                $pagination['page']+1 . ($pagination['catalog'] ? '' : '/') ?>" class="icon icon-chevron-right chevron"></a>
        <?php endif ?>
        <div class="display-styles">
            <a href="/<?= $board->url ?>/" class="icon-list"></a>
            <a href="/<?= $board->url ?>/catalog" class="icon-grid"></a>
        </div>
    </div>
    <?php endif ?>
</div>
